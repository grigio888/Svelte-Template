server {
    listen 80;
    server_name template.local *.template.local template *.template 45.79.187.40;

    if ($environment = production) {
        return 301 https://www.template$request_uri;
    }

    
    location ~* ^/(favicon\.ico|favicon\.png|ads.txt|robots.txt|sitemap.xml)$ {
        alias /vol/static/$1;
    }

    location /static {
        alias /vol/static;
    }

    location / {
        proxy_pass http://frontend:3000;
        proxy_redirect off;

        # Increase header buffers for large upstream headers to avoid 502 "upstream sent too big header" errors.
        proxy_buffer_size   16k;
        proxy_buffers       8 16k;
        proxy_busy_buffers_size 24k;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.0;
    }
}
